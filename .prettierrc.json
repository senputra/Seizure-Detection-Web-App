	"printWidth": 100,
	"useTabs": false,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"proseWrap": "always",
	"endOfLine": "lf",
	"quoteProps": "consistent",
	"overrides": [
